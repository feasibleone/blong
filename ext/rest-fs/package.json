{
    "name": "rest-fs",
    "displayName": "REST Filesystem",
    "description": "A filesystem provider backed by REST API",
    "version": "0.0.7",
    "repository": {
        "url": "git+https://github.com/feasibleone/wanples.git"
    },
    "license": "BlueOak-1.0.0",
    "publisher": "undertree",
    "engines": {
        "vscode": "^1.107.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onFileSystem:restfs",
        "onFileSystemAccess:restfs",
        "onUri"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "restfs.openWorkspace",
                "title": "REST FS: Open Workspace"
            },
            {
                "command": "restfs.addWorkspace",
                "title": "REST FS: Add Workspace"
            },
            {
                "command": "restfs.configure",
                "title": "REST FS: Configure API Endpoint"
            }
        ],
        "configuration": {
            "title": "REST Filesystem",
            "properties": {
                "workspace": {
                    "type": "object",
                    "description": "Configuration for REST API filesystem workspaces",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "baseUrl": {
                                "type": "string",
                                "default": "http://localhost:3000/api/fs",
                                "description": "Base URL for the REST API filesystem backend"
                            },
                            "headers": {
                                "type": "object",
                                "default": {
                                    "Authorization": "Basic base64-encoded-credentials"
                                },
                                "description": "Custom headers to send with each REST API request (e.g., authentication tokens)"
                            }
                        }
                    },
                    "default": {}
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "npm run check-types && npm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "npm run check-types && npm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test",
        "build": "npm run compile",
        "ci-unit": "xvfb-run -a npm run test",
        "ci-lint": "npm run lint"
    },
    "devDependencies": {
        "@types/vscode": "^1.107.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24",
        "typescript-eslint": "^8.48.1",
        "eslint": "~9.39.2",
        "esbuild": "^0.27.1",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.9.3",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2"
    }
}
